{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "ConnectionStrings": {
    "SQLITE": "Data Source=../data/ultimo.icondo.db"
  },
  "AppConfig": {
    "PlateImagePath": "../data/images",
    "DataCleaningTime": 0, // 0-23
    "RepushIntervalTime": 5 // repush error data interval time(minute)
  },

  "JwtSettings": {
    "Issuer": "http://localhost:8080",
    "SigningKey": "Wiy8HdkSh3mZDVUzrJfbo7E1IMF0Tjlv"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "Logs/log.log",
              "rollingInterval": "Day",
              "rollOnFileSizeLimit": true,
              "fileSizeLimitBytes": 10485760, //10M
              "retainedFileCountLimit": 90 
            }
          }
        ]
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Ultimo.ICondo.App"
    }
  },
  "AllowedHosts": "*"
}